<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.personas_social.activity.VideoEditActivity">
    <data>

        <variable
            name="viewModel"
            type="com.app.personas_social.viewmodel.VideoEditViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/includeToolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

         <com.audiowaveforms.AudioWaveSeekView
             android:id="@+id/audioWave"
             android:layout_width="match_parent"
             android:layout_height="@dimen/dimen_30dp"
             android:visibility="gone"
             app:wavee_corner_radius="2dp"
             app:wavee_gravity="center"
             app:wavee_min_height="5dp"
             app:wavee_background_colorr = "@color/black"
             app:wavee_progress_colorr = "@color/black"
             android:textColor="@android:color/black"
             app:thumbSrc="@drawable/ic_navigate_next_black_24dp"
             app:selectionTint="@android:color/black"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/includeToolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ccTop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintVertical_weight="0.9"
                    app:layout_constraintBottom_toTopOf="@+id/cc_videoPlay"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/frVideoController"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/white"
                        android:visibility="visible"
                        android:onClick="onClickViewEditScreen"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/dimen_14dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="@dimen/dimen_0dp"
                            app:cardPreventCornerOverlap="true">

                            <FrameLayout
                                android:id="@+id/frVideo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <com.app.personas_social.utlis.MyExoPlayerView
                                android:id="@+id/playerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                app:resize_mode="fixed_height"
                                app:surface_type="surface_view"
                                app:use_controller="false" >

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivContains"
                                    viewVisibility="@{viewModel.isShowThumbnail}"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop" />
                            </com.app.personas_social.utlis.MyExoPlayerView>


                            </FrameLayout>


                        </androidx.cardview.widget.CardView>



                        <FrameLayout
                            android:id="@+id/frameGl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <com.app.personas_social.stickerview.StickerView
                            android:id="@+id/stickerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:translationZ="@dimen/dimen_10dp"
                            app:showBorder="true"
                            app:showIcons="true" />


                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVideoDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_25dp"
                        android:alpha="0.7"
                        android:background="@drawable/time_round_background"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/time0"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:paddingLeft="@dimen/dimen_3dp"
                        android:paddingRight="@dimen/dimen_3dp"
                        android:paddingBottom="@dimen/dimen_2dp"
                        android:textColor="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/frVideoController"
                        app:layout_constraintEnd_toEndOf="@id/frVideoController"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@id/frVideoController" />

                    <com.videoseekbar.VideoSeekBar
                        android:id="@+id/videoSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:isb_clear_default_padding="false"
                        app:isb_seek_smoothly="true"
                        app:isb_progress_value_float="true"
                        app:isb_show_indicator="none"
                        app:isb_show_thumb_text="false"
                        app:isb_show_tick_texts="false"
                        app:isb_thumb_adjust_auto="false"
                        app:isb_track_highlight_color="@color/white"
                        app:isb_track_background_color="@color/white"
                        app:isb_track_progress_color="@color/pink"
                        app:isb_thumb_pin_drawable="@drawable/ellipse"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/frVideoController"
                        app:layout_constraintEnd_toEndOf="@id/frVideoController"
                        app:layout_constraintStart_toEndOf="@id/tvVideoDuration"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cc_videoPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_weight="0.5"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    app:layout_constraintTop_toBottomOf="@+id/ccTop"
                    app:layout_constraintBottom_toTopOf="@+id/ccBottom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_undo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_undo"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:onClick="onClickViewEditScreen"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_redo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_redo"
                        android:onClick="onClickViewEditScreen"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        app:layout_constraintStart_toEndOf="@+id/img_undo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pause"
                        android:onClick="onClickViewEditScreen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFullExitscreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video_minmize"
                        android:layout_marginEnd="@dimen/dimen_25dp"
                        android:visibility="gone"
                        android:onClick="onClickViewEditScreen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFullscreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fullscreen"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:visibility="visible"
                        android:onClick="onClickViewEditScreen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_allapply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/double_tick"
                        android:visibility="gone"
                        android:onClick="onClickViewEditScreen"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        app:layout_constraintEnd_toStartOf="@id/img_done"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_tick"
                        android:visibility="gone"
                        android:onClick="onClickViewEditScreen"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ccBottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="visible"
                    app:layout_constraintVertical_weight="0.6"
                    app:layout_constraintTop_toBottomOf="@+id/cc_videoPlay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <com.github.captain_miao.optroundcardview.OptRoundCardView
                        android:id="@+id/ll_item"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:optRoundCardCornerRadius="40dp"
                        app:optRoundCardLeftBottomCorner="false"
                        app:optRoundCardRightBottomCorner="false"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:elevation="@dimen/dimen_10dp"
                        app:optRoundCardBackgroundColor="@color/white"
                        app:optRoundCardElevation="@dimen/dimen_50dp"
                        app:optRoundCardPreventCornerOverlap="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_item_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:background="@color/white"
                            android:orientation="vertical"
                            >


                            <LinearLayout
                                android:id="@+id/ll1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:orientation="vertical"
                                >
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvVideoEditBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/dimen_20dp"
                                    android:layout_marginRight="@dimen/dimen_20dp"
                                    android:orientation="horizontal"
                                    android:nestedScrollingEnabled="false"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:itemCount="4"
                                    android:overScrollMode="never"
                                    android:visibility="visible"
                                    tools:listitem="@layout/item_video_edit_btn"
                                    app:layout_constraintBottom_toBottomOf="@+id/guidelineCenter"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvVideoTextEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:itemCount="4"
                                    android:layout_marginHorizontal="@dimen/dimen_5dp"
                                    android:overScrollMode="never"
                                    android:nestedScrollingEnabled="false"
                                    android:visibility="gone"
                                    tools:listitem="@layout/item_video_edit_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvVideoMusic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    android:orientation="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:itemCount="3"
                                    android:overScrollMode="never"
                                    android:nestedScrollingEnabled="false"
                                    android:visibility="gone"
                                    tools:listitem="@layout/item_video_edit_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    />


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvVideoEditMusic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    tools:itemCount="3"
                                    app:spanCount="5"
                                    android:overScrollMode="never"
                                    android:nestedScrollingEnabled="false"
                                    android:visibility="gone"
                                    android:layout_marginHorizontal="@dimen/dimen_5dp"
                                    tools:listitem="@layout/item_video_edit_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"

                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llRecord"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivRecordCancel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:onClick="onClickViewEditScreen"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/closeicon"
                                    />


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivRecordDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:onClick="onClickViewEditScreen"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_right_black"
                                    />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivRecordReplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:onClick="onClickViewEditScreen"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_replay"
                                    />


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivRecord"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="onClickViewEditScreen"
                                android:src="@drawable/ic_recordpause"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvRecordTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:text="00:00:00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/ivRecord"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:textSize="@dimen/dimen_14sp"
                                android:textColor="@color/black"
                                app:fontFamily="@font/roboto_regular"
                                />

                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/nestedScroll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fillViewport="true"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                            <HorizontalScrollView
                                android:id="@+id/horizontalScroll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                               >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    <com.audiowaveforms.AudioWaveSeekView
                                        android:id="@+id/recordSeekWave"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_30dp"
                                        android:visibility="gone"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:layout_marginEnd="@dimen/dimen_10dp"
                                        android:textColor="@android:color/black"
                                        app:thumbSrc="@drawable/ic_navigate_next_black_24dp"
                                        app:selectionTint="@android:color/black" />
                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    <com.audiowaveforms.AudioWaveSeekView
                                        android:id="@+id/effectsSeekWave"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_30dp"
                                        android:visibility="gone"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:layout_marginEnd="@dimen/dimen_10dp"
                                        android:textColor="@android:color/black"
                                        app:thumbSrc="@drawable/ic_navigate_next_black_24dp"
                                        app:selectionTint="@android:color/black" />
                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                    <com.audiowaveforms.AudioWaveSeekView
                                        android:id="@+id/audioSeekWave"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_30dp"
                                         android:visibility="gone"
                                         android:layout_marginStart="@dimen/dimen_20dp"
                                         android:layout_marginEnd="@dimen/dimen_10dp"
                                         android:layout_marginTop="@dimen/dimen_15dp"
                                        android:textColor="@android:color/black"
                                        app:thumbSrc="@drawable/ic_navigate_next_black_24dp"
                                        app:selectionTint="@android:color/black" />

                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvTextFrame"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dimen_10dp"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        tools:itemCount="4"
                                        android:visibility="gone"
                                        tools:listitem="@layout/raw_item_layout"
                                        />

                                    </FrameLayout>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvFrame2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_8dp"
                                        android:clipToPadding="false"
                                        android:layout_marginEnd="@dimen/dimen_20dp"
                                        android:layout_marginBottom="@dimen/dimen_10dp"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/ivAddGallery"
                                        android:visibility="visible" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvTextLine"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_4dp"
                                        android:clipToPadding="false"
                                        android:layout_marginEnd="@dimen/dimen_20dp"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        android:layout_marginBottom="@dimen/dimen_10dp"
                                        app:layout_constraintTop_toBottomOf="@+id/rvFrame"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/ivAddGallery"
                                        android:visibility="visible" />



                                </LinearLayout>


                            </HorizontalScrollView>

                                </LinearLayout>

                            </androidx.core.widget.NestedScrollView>

                            <FrameLayout
                                android:id="@+id/flFrames"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/guidelineCenter"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/llframe"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:layout_marginBottom="@dimen/dimen_20dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivAddGallery"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:translationZ="@dimen/dimen_10dp"
                                        android:elevation="@dimen/dimen_30dp"
                                        android:onClick="onClickViewEditScreen"
                                        android:layout_marginTop="@dimen/dimen_5dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_marginStart="@dimen/dimen_30dp"
                                        android:src="@drawable/ic_plus" />

                                       <View

                                           android:layout_width="@dimen/dimen_60dp"
                                           android:layout_height="wrap_content"
                                           android:background="@color/white"
                                           android:elevation="@dimen/dimen_1dp"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvFrame"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/dimen_80dp"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_22dp"
                                        android:clipToPadding="false"
                                        android:layout_marginStart="-50dp"
                                        tools:listitem="@layout/row_framesss"
                                        android:layout_marginEnd="@dimen/dimen_30dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/ivAddGallery"
                                        android:visibility="visible" />



                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        android:layout_marginTop="-20dp"
                                        android:layout_marginBottom="@dimen/dimen_20dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/rvFrame"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/rvFrame"
                                        app:srcCompat="@drawable/ic_seekbar" />



                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </FrameLayout>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineCenter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintGuide_percent="0.65" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/trim_cuttr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ll_Cutter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/dimen_70dp"
                                android:layout_marginRight="@dimen/dimen_70dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/videoFramecuttorView"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">


                                <LinearLayout
                                    android:id="@+id/ll_previous"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:onClick="onClickViewEditScreen"
                                    android:orientation="vertical"
                                    >
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_backword"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/previous"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textSize="@dimen/dimen_14sp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/roboto_regular"
                                        />

                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvitem_count"
                                    android:layout_width="@dimen/dimen_20dp"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/dimen_15dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:fontFamily="@font/roboto_regular"
                                    />

                                <LinearLayout
                                    android:id="@+id/ll_next"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:onClick="onClickViewEditScreen"
                                    android:layout_weight="1"
                                    >
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_forward"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/next"
                                        android:layout_gravity="center"
                                        android:textSize="@dimen/dimen_14sp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/roboto_regular"
                                        />

                                </LinearLayout>

                            </LinearLayout>

                            <com.videoframeview.VideoFrameViewCutter
                                android:id="@+id/videoFramecuttorView"
                                android:layout_width="wrap_content"
                                android:layout_height="58dp"
                                android:background="@android:color/white"
                                android:visibility="visible"
                                app:isDrawableSet="false"
                                app:isThumbDisplay="true"
                                android:layout_marginStart="@dimen/dimen_20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_Cutter"
                                app:layout_constraintEnd_toEndOf="parent"/>



                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/ccText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical"
                            >

                            <include
                                android:id="@+id/llAddTextView"
                                layout="@layout/add_text_view"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ccFilter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:orientation="vertical"
                            >

                            <include
                                android:id="@+id/llFilterView"
                                layout="@layout/add_filter_view" />

                        </LinearLayout>



                    </com.github.captain_miao.optroundcardview.OptRoundCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
