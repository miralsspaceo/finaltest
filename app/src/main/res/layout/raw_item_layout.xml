<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:scrollbars="none">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            >

            <com.app.personas_social.stickerview.StickerTextView
                android:id="@+id/split_range"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:textColor="@android:color/black"
                app:background="@drawable/background_sel"
                app:thumbSrc="@drawable/ic_navigate_next_black_24dp"
                app:selectionTint="@android:color/black"
                />
        </FrameLayout>
    </LinearLayout>
</layout>